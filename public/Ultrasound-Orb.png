<svg width="500" height="500" viewBox="0 0 500 500" fill="none" xmlns="http://www.w3.org/2000/svg">
  <!-- Background -->
  <rect width="500" height="500" fill="#f8fafc"/>
  
  <!-- Orb base -->
  <circle cx="250" cy="350" r="120" fill="#1f2937" opacity="0.8"/>
  
  <!-- Main orb -->
  <circle cx="250" cy="250" r="100" fill="#374151" opacity="0.9"/>
  
  <!-- Inner glow -->
  <circle cx="250" cy="250" r="80" fill="#4b5563" opacity="0.7"/>
  
  <!-- Ultrasound image representation -->
  <ellipse cx="250" cy="250" rx="60" ry="40" fill="#fbbf24" opacity="0.6"/>
  <ellipse cx="250" cy="250" rx="40" ry="25" fill="#f59e0b" opacity="0.8"/>
  
  <!-- Baby silhouette -->
  <ellipse cx="250" cy="240" rx="15" ry="20" fill="#1f2937" opacity="0.9"/>
  <circle cx="250" cy="220" r="8" fill="#1f2937" opacity="0.9"/>
  
  <!-- Glow effect -->
  <circle cx="250" cy="250" r="120" fill="none" stroke="#fbbf24" stroke-width="2" opacity="0.3"/>
  
  <!-- Text -->
  <text x="250" y="450" text-anchor="middle" fill="#6b7280" font-family="Arial, sans-serif" font-size="16" font-weight="bold">
    Ultrasound Orb
  </text>
  <text x="250" y="470" text-anchor="middle" fill="#9ca3af" font-family="Arial, sans-serif" font-size="12">
    Personalized Crystal Keepsake
  </text>
