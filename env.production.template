# ===========================================
# PRODUCTION ENVIRONMENT VARIABLES TEMPLATE
# ===========================================
# Copy this file to .env.production and fill in your actual values
# DO NOT commit .env.production to git - it contains sensitive data

# ===========================================
# SUPABASE CONFIGURATION
# ===========================================
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url_here
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# ===========================================
# ADMIN AUTHENTICATION
# ===========================================
# Generate admin password hash using: node generate_admin_password.js
ADMIN_PASSWORD_HASH=your_bcrypt_password_hash_here
ADMIN_SECRET_TOKEN=your_secure_admin_token_here
NEXT_PUBLIC_ADMIN_TOKEN=your_public_admin_token_here

# ===========================================
# CLOUDINARY CONFIGURATION
# ===========================================
NEXT_PUBLIC_CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name_here
CLOUDINARY_API_KEY=your_cloudinary_api_key_here
CLOUDINARY_API_SECRET=your_cloudinary_api_secret_here

# ===========================================
# GOOGLE SHEETS INTEGRATION
# ===========================================
GOOGLE_SHEETS_PRIVATE_KEY=your_google_sheets_private_key_here
GOOGLE_SHEETS_CLIENT_EMAIL=your_google_sheets_client_email_here
GOOGLE_SHEETS_SHEET_ID=your_google_sheets_sheet_id_here

# ===========================================
# META PIXEL (FACEBOOK)
# ===========================================
NEXT_PUBLIC_META_PIXEL_ID=your_meta_pixel_id_here

# ===========================================
# CLOUDFLARE CONFIGURATION
# ===========================================
CLOUDFLARE_API_TOKEN=your_cloudflare_api_token_here
CLOUDFLARE_ZONE_ID=your_cloudflare_zone_id_here

# ===========================================
# REDIS CONFIGURATION (Optional)
# ===========================================
REDIS_URL=your_redis_url_here
REDIS_PASSWORD=your_redis_password_here

# ===========================================
# SECURITY TOKENS
# ===========================================
# Generate secure random tokens for these
JWT_SECRET=your_jwt_secret_here
ENCRYPTION_KEY=your_encryption_key_here
API_SECRET_KEY=your_api_secret_key_here

# ===========================================
# EXTERNAL API KEYS
# ===========================================
# Add any other API keys you need
EXTERNAL_API_KEY=your_external_api_key_here

# ===========================================
# DEPLOYMENT CONFIGURATION
# ===========================================
NODE_ENV=production
NEXT_PUBLIC_APP_URL=https://your-domain.com
NEXT_PUBLIC_APP_NAME=Your App Name

# ===========================================
# MONITORING & ANALYTICS
# ===========================================
# Add monitoring service keys if needed
MONITORING_API_KEY=your_monitoring_api_key_here
ANALYTICS_API_KEY=your_analytics_api_key_here
